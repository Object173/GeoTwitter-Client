<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/light_background"
    android:padding="@dimen/list_item_margin">

    <TextView
        android:id="@+id/title_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/place_info_max_width"
        android:layout_weight="1"
        style="@style/PlaceTitleStyle"/>

    <TextView
        android:id="@+id/date_field"
        style="@style/DateListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/place_info_max_width"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/list_item_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/image_list_item_width"
            android:layout_height="@dimen/image_list_item_height"
            android:src="@mipmap/ic_image"
            android:layout_marginRight="@dimen/list_item_margin"/>

        <TextView
            android:id="@+id/body_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/place_info_body_max_width"
            style="@style/PlaceBodyStyle"/>

    </LinearLayout>

</LinearLayout>