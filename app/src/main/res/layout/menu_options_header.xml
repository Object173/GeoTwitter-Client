<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/fab_margin"
        android:clickable="true"
        android:background="?android:selectableItemBackground">

    <com.object173.geotwitter.gui.views.CircleImageView
        android:id="@+id/image_view_avatar"
        civ_border_color="@color/color_border"
        civ_border_width="@dimen/mini_avatar_border"
        android:layout_width="@dimen/medium_avatar_size"
        android:layout_height="@dimen/medium_avatar_size"
        android:src="@mipmap/avatar" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/fab_margin"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_login_null"
                android:layout_gravity="center_horizontal"
                style="@style/UsernameDark"/>

            <TextView
                android:id="@+id/status_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:text="@string/profile_activity_title_status"
                android:layout_gravity="center_horizontal"
                style="@style/StatusDark"/>

        </LinearLayout>

</LinearLayout>