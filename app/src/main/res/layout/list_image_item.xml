<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/image_list_item_width"
    android:layout_height="@dimen/image_list_item_height"
    android:layout_margin="@dimen/image_list_item_margin"
    android:background="@color/light_background">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/image_list_item_margin"
        android:scaleType="centerCrop"/>

    <ImageButton
        android:id="@+id/remove_button"
        android:layout_width="@dimen/remove_image_icon_size"
        android:layout_height="@dimen/remove_image_icon_size"
        android:src = "@android:drawable/ic_menu_close_clear_cancel"
        android:layout_alignRight="@+id/image_view"/>

</RelativeLayout>